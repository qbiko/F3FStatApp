<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartEventValidatorActivity">

    <RelativeLayout
        android:id="@+id/relativeLayoutContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/enter_event_id_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/event_id_editText"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="@string/enter_event_id_text" />

        <EditText
            android:id="@+id/event_id_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="number" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/event_id_editText"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/confirm_button" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/cancel_button" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/result_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayoutContainer"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/response_textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/result_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>