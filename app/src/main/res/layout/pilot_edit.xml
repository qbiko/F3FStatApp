<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayoutContainer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/settings_information_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_information_text"
            android:layout_marginBottom="30dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/edit_seconds_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_information_textView"
            android:text="@string/edit_seconds" />

        <EditText
            android:id="@+id/edit_seconds_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_seconds_textView"
            android:ems="10"
            android:inputType="numberDecimal" />


        <Button
            android:id="@+id/edit_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_seconds_editText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/edit_confirm_button" />

    </RelativeLayout>


</RelativeLayout>